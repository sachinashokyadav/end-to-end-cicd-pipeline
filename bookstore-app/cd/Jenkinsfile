pipeline {
  agent any
  environment {
    WORKER_IP = '3.109.184.111'
  }
  parameters {
    string(name: 'IMAGE_TAG', description: 'Docker image tag to deploy')
  }
  stages {
    stage('Deploy to k8s') {
      steps {
        sh '''
          ssh -o StrictHostKeyChecking=no -i ~/.ssh/lab4ec2.pem ubuntu@${WORKER_IP} "export KUBECONFIG=/home/ubuntu/kubeconfig && kubectl set image deployment/bookstore bookstore=${IMAGE_TAG} --record"
        '''
      }
    }
    stage('Verify Deployment') {
      steps {
        sh '''
          ssh -o StrictHostKeyChecking=no -i ~/.ssh/lab4ec2.pem ubuntu@${WORKER_IP} "export KUBECONFIG=/home/ubuntu/kubeconfig && kubectl rollout status deployment/bookstore"
        '''
      }
    }
  }
}
